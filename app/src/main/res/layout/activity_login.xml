<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="askmeanythong.com.askmeanythong.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/top"
        android:layout_height="200dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="vertical"
           android:background="@drawable/border_logo">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ask me"
               android:textSize="50dp"
               android:fontFamily="cursive"
               android:textColor="#ffffff"
               android:gravity="center"
               android:id="@+id/heading1"
               android:layout_gravity="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Anything"
               android:fontFamily="cursive"
               android:textSize="50dp"
               android:layout_marginTop="10dp"
               android:textColor="#ffffff"
               android:gravity="center"
               android:layout_gravity="center"/>

       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/top"
        android:padding="10dp"
        android:id="@+id/mid"
        android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/d_edt_username"
                android:layout_width="match_parent"
                android:background="@drawable/edt_back"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:hint="Enter UserName"
                    android:inputType="text"
                    android:gravity="center"
                    android:paddingTop="5sp"
                    android:singleLine="true"
                    android:background="@drawable/edt_back"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="20dp" />
            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/d_edt_pass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/edt_back"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Enter Password"
                android:inputType="text"
                android:background="@drawable/edt_back"
                android:gravity="center"
                android:paddingTop="5sp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:id="@+id/btn_login"
            android:background="@drawable/edt_back"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/mid"
        android:orientation="horizontal"
        android:id="@+id/lower"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:text="Sign Up"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgetpass"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="Forget Password"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lower"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#40C4FF"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:text="askme anything@"
            />

    </RelativeLayout>
</RelativeLayout>
